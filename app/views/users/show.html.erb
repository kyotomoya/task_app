<h2>スケジュール詳細</h2>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @user.start_day %></td>
    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @user.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= if @user.all_day == "1"
                  p "○"
                else 
                  p " "
                end %>
        </td>
    </tr>
    <tr>
      <th>メモ</th>
      <td><%= @user.text %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :users %></li>
        <li><%= link_to "スケジュールを編集する", :edit_user %></li>
        <li><%= link_to "スケジュールを削除", 
         user_path, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
    </ul>
</div>